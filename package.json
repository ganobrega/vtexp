{
  "name": "vtexp",
  "version": "1.0.2",
  "description": "VTEXP is an Open-Source and Free extension that facilitates navigation and improves some features of the VTEX platform.",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/ganobrega/vtexp",
  "scripts": {
    "lint": "eslint {chrome,app}/**/*.{js,jsx} --fix",
    "clean": "npx rimraf build/",
    "start": "cross-env NODE_ENV=development webpack --config webpack.dev.js --watch",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --config webpack.prod.js && npx jszip-cli build/ -o build/vtexp.zip",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.7.2",
    "cheerio": "^1.0.0-rc.3",
    "element-change": "^1.0.1",
    "grommet": "^2.9.0",
    "grommet-icons": "^4.4.0",
    "i18next": "^19.4.4",
    "polished": "^3.4.2",
    "query-string": "^6.10.1",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-animated-css": "^1.2.1",
    "react-dom": "^16.8.6",
    "react-i18next": "^11.4.0",
    "react-icons": "^3.10.0",
    "react-reveal": "^1.2.2",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-slick": "^0.25.2",
    "react-transition-group": "^4.3.0",
    "slick-carousel": "^1.8.1",
    "string": "^3.3.3",
    "styled-components": "^5.0.0",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^6.0.3",
    "css-loader": "^3.0.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.19.1",
    "style-loader": "^0.23.1",
    "url-loader": "^3.0.0",
    "webpack": "^4.35.3",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.5",
    "webpack-extension-manifest-plugin": "^0.4.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:promise/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react",
      "jsx-a11y",
      "import",
      "promise"
    ],
    "rules": {
      "linebreak-style": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "import/extensions": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            "jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "react/jsx-one-expression-per-line": "off",
      "react/no-danger": "off",
      "react/jsx-props-no-spreading": "off",
      "react/display-name": "off",
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "paths": [
            "./"
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "globals": {
      "chrome": true
    }
  }
}
